<%= form_with(model: classroom, data: { controller: 'validation' }) do |form| %>
  <div class="form-group">
      <%= form.label :name, class: 'form-control-label' %>
        <%= form.text_field :name, class: 'form-control' %>
    </div>
  <div class="form-group">
        <div class="custom-control custom-checkbox">
      <%= form.check_box :optional, class: 'custom-control-input' %>
      <%= form.label :optional, class: 'custom-control-label' %>
    </div>
    </div>
  <div class="form-group">
      <%= form.label :color, class: 'form-control-label' %>
        <%= form.text_field :color, class: 'form-control' %>
    </div>
  <div class="form-group">
      <%= form.label :form_tutor_id, class: 'form-control-label' %>
        <%= form.collection_select(:form_tutor_id, FormTutor.all, :id, :to_s, {}, { class: 'form-control', data: { controller: 'select' } }) %>
    </div>
  <div class="form-group">
        <div class="custom-control custom-checkbox">
      <%= form.check_box :allow_registration, class: 'custom-control-input' %>
      <%= form.label :allow_registration, class: 'custom-control-label' %>
    </div>
    </div>
  <div class="form-group">
      <%= form.label :registration_code, class: 'form-control-label' %>
        <%= form.text_field :registration_code, class: 'form-control' %>
    </div>
<div class="card-footer pl-0">
  <%= form.submit class: 'btn btn-success' %>
</div>
<% end %>
