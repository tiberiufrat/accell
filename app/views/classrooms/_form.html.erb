<%= form_with(model: classroom, data: { controller: 'validation' }) do |form| %>
  <div class="form-group mb-2">
    <div class="input-group input-group-merge input-group-alternative mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text"><i class="far fa-users-class"></i></span>
      </div>
      <%= form.text_field :name, autofocus: true, class: 'form-control', placeholder: :name, required: true %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :optional, class: 'form-control-label d-block' %>
    <label class="custom-toggle">
      <%= form.check_box :optional %>
      <span class="custom-toggle-slider rounded-circle" data-label-off="<%= t 'general.no' %>" data-label-on="<%= t 'general.yes' %>"></span>
    </label>
  </div>

  <div class="form-group mb-2">
    <div class="input-group input-group-merge input-group-alternative mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text input-group-select2"><i class="far fa-venus-mars"></i></span>
      </div>
      <%= form.select :color, options_for_select(
        { 
          t('general.colors.primary').titleize => 'primary', 
          t('general.colors.info').titleize => 'info',
          t('general.colors.danger').titleize => 'danger',
          t('general.colors.success').titleize => 'success',
          t('general.colors.warning').titleize => 'warning',
        }, (@classroom.color)), {}, { 
        class: 'form-control', required: true, data: {
          toggle: 'select', 
          placeholder: t('activerecord.attributes.classroom.color'),
          'minimum-results-for-search': "Infinity"
        }
      } %>
    </div>
  </div>

  <div class="form-group">
      <%= form.label :form_tutor_id, class: 'form-control-label' %>
        <%= form.collection_select(:form_tutor_id, Staff.all, :id, :name, {}, { class: 'form-control', data: { controller: 'select' } }) %>
    </div>
  <div class="form-group">
    <%= form.label :school_id, class: 'form-control-label' %>
      <%= form.collection_select(:school_id, School.all, :id, :name, {}, { class: 'form-control', data: { controller: 'select' } }) %>
  </div>
  <div class="form-group">
        <div class="custom-control custom-checkbox">
      <%= form.check_box :allow_registration, class: 'custom-control-input' %>
      <%= form.label :allow_registration, class: 'custom-control-label' %>
    </div>
    </div>
  <div class="form-group">
      <%= form.label :registration_code, class: 'form-control-label' %>
        <%= form.text_field :registration_code, class: 'form-control' %>
    </div>
<div class="card-footer pl-0">
  <%= form.submit class: 'btn btn-success' %>
</div>
<% end %>
