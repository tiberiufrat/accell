<%= form_with(model: comment, data: { controller: 'validation' }) do |form| %>
  <div class="form-group">
      <%= form.label :body, class: 'form-control-label' %>
        <%= form.text_area :body, class: 'form-control' %>
    </div>
  <div class="form-group">
      <%= form.label :announcement_id, class: 'form-control-label' %>
        <%= form.collection_select(:announcement_id, Announcement.all, :id, :to_s, {}, { class: 'form-control', data: { controller: 'select' } }) %>
    </div>
  <div class="form-group">
      <%= form.label :parent_id, class: 'form-control-label' %>
        <%= form.number_field :parent_id, class: 'form-control' %>
    </div>
  <div class="form-group">
      <%= form.label :user_id, class: 'form-control-label' %>
        <%= form.collection_select(:user_id, User.all, :id, :to_s, {}, { class: 'form-control', data: { controller: 'select' } }) %>
    </div>
<div class="card-footer pl-0">
  <%= form.submit class: 'btn btn-success' %>
</div>
<% end %>
