      <div class="card pb-3">
        <!-- Card header -->
        <div class="card-header border-0">
          <div class="row">
            <div class="col-6">
              <h3 class="mb-0"><%= t 'general.list_of' %> <%= t 'activerecord.models.comment.other' %></h3>
            </div>
            <div class="col-6 text-right">
              <%= link_to new_comment_path, class: "btn btn-sm btn-primary btn-round btn-icon", data: { toggle: :tooltip, 'original-title': "#{ t 'general.add'} #{ t 'activerecord.models.comment.one' }" } do %>
                <span class="btn-inner--icon">
                  <i class="fas fa-plus"></i>
                </span>
                <span class="btn-inner--text"><%= t 'general.add' %></span>
              <% end %>
            </div>
          </div>
        </div>
        <!-- Light table -->
        <div class="table-responsive">
          <table class="table align-items-center table-flush" id="datatable-basic">
            <thead class="thead-light">
              <tr>
                                  <th><%= t ("activerecord.attributes.comment.body") %></th>
                                  <th><%= t ("activerecord.attributes.comment.announcement") %></th>
                                  <th><%= t ("activerecord.attributes.comment.parent_id") %></th>
                                  <th><%= t ("activerecord.attributes.comment.user") %></th>
                                <th scope="col" class="no-sort"></th>
              </tr>
            </thead>
            <tbody>
              <% @comments.each do |comment| %>
                <tr>
                                                            <td><%= comment.body %></td>
                                                                                <td><%= comment.announcement %></td>
                                                                                <td><%= comment.parent_id %></td>
                                                                                <td><%= comment.user %></td>
                                                        <td class="table-actions">
                    <%= link_to '<i class="far fa-eye"></i>'.html_safe, comment, class: "table-action", data: { toggle: 'tooltip', 'original-title': t('general.view') } %>
                    <%= link_to '<i class="far fa-user-edit"></i>'.html_safe, edit_comment_path(comment), class: "table-action", data: { toggle: 'tooltip', 'original-title': t('general.edit') } %>
                    <%= link_to '<i class="far fa-trash"></i>'.html_safe, comment, class: "table-action table-action-delete", data: { toggle: 'tooltip', 'original-title': t('general.delete'), confirm: t('general.are_you_sure_delete'), remote: true }, method: :delete %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
