<%= form_with(model: observation, data: { controller: 'validation' }) do |form| %>
  <div class="form-group">
      <%= form.label :text, class: 'form-control-label' %>
        <%= form.text_field :text, class: 'form-control' %>
    </div>
  <div class="form-group">
      <%= form.label :creator_id, class: 'form-control-label' %>
        <%= form.collection_select(:creator_id, Creator.all, :id, :to_s, {}, { class: 'form-control', data: { controller: 'select' } }) %>
    </div>
<div class="card-footer pl-0">
  <%= form.submit class: 'btn btn-success' %>
</div>
<% end %>
