<%= form_with(model: school, data: { controller: 'validation' }) do |form| %>
  <div class="form-group">
      <%= form.label :name, class: 'form-control-label' %>
        <%= form.text_field :name, class: 'form-control' %>
    </div>
  <div class="form-group">
      <%= form.label :email, class: 'form-control-label' %>
        <%= form.text_field :email, class: 'form-control' %>
    </div>
  <div class="form-group">
      <%= form.label :phone, class: 'form-control-label' %>
        <%= form.text_field :phone, class: 'form-control' %>
    </div>
  <div class="form-group">
      <%= form.label :country, class: 'form-control-label' %>
        <%= form.text_field :country, class: 'form-control' %>
    </div>
  <div class="form-group">
      <%= form.label :city, class: 'form-control-label' %>
        <%= form.text_field :city, class: 'form-control' %>
    </div>
  <div class="form-group">
      <%= form.label :address, class: 'form-control-label' %>
        <%= form.text_field :address, class: 'form-control' %>
    </div>
<div class="card-footer pl-0">
  <%= form.submit class: 'btn btn-success' %>
</div>
<% end %>
