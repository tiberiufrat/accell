<%= form_with(model: subject, data: { controller: 'validation' }) do |form| %>
  <div class="form-group">
      <%= form.label :title, class: 'form-control-label' %>
        <%= form.text_field :title, class: 'form-control' %>
    </div>
  <div class="form-group">
      <%= form.label :color, class: 'form-control-label' %>
        <%= form.text_field :color, class: 'form-control' %>
    </div>
  <div class="form-group">
      <%= form.label :icon, class: 'form-control-label' %>
        <%= form.text_field :icon, class: 'form-control' %>
    </div>
  <div class="form-group">
        <div class="custom-control custom-checkbox">
      <%= form.check_box :staff_only, class: 'custom-control-input' %>
      <%= form.label :staff_only, class: 'custom-control-label' %>
    </div>
    </div>
  <div class="form-group">
        <div class="custom-control custom-checkbox">
      <%= form.check_box :individual_activity, class: 'custom-control-input' %>
      <%= form.label :individual_activity, class: 'custom-control-label' %>
    </div>
    </div>
  <div class="form-group">
        <div class="custom-control custom-checkbox">
      <%= form.check_box :attendance, class: 'custom-control-input' %>
      <%= form.label :attendance, class: 'custom-control-label' %>
    </div>
    </div>
  <div class="form-group">
      <%= form.label :evaluation, class: 'form-control-label' %>
        <%= form.number_field :evaluation, class: 'form-control' %>
    </div>
<div class="card-footer pl-0">
  <%= form.submit class: 'btn btn-success' %>
</div>
<% end %>
